{
  "private": true,
  "scripts": {
    "prepare": "nitropack prepare && chmod +x redis.sh && ./redis.sh",
    "dev:linux": "concurrently \"redis-server\" \"bun sass\" \"nitropack dev\"",
    "dev:windows": "concurrently \"bun sass\" \"nitropack dev\"",
    "dev": "if [[ $OSTYPE == \"linux-gnu\" ]]; then bun run dev:linux; else bun run dev:windows; fi",
    "build": "nitropack build",
    "sass": "sass ./pages/styles/scss/main.scss ./pages/styles/style.css --watch",
    "start": "bun .output/server/index.mjs",
    "test": "bun test --timeout 2000",
    "preview": "bun .output/server/index.mjs"
  },
  "dependencies": {
    "ioredis": "^5.3.2",
    "nitropack": "latest"
  },
  "devDependencies": {
    "@types/ioredis": "^5.0.0",
    "@types/node": "^20.10.4",
    "bun-types": "^1.0.15",
    "concurrently": "^8.2.2",
    "sass": "^1.69.5"
  }
}
